{% doc %}
  @prompt
    Blog posts
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-blog-posts-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-blog-posts-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-blog-posts-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: 40px;
  }

  .ai-blog-posts-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 12px;
  }

  .ai-blog-posts-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  .ai-blog-posts-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-blog-post-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
  }

  .ai-blog-post-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .ai-blog-post-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 66.67%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-blog-post-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-blog-post-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-blog-post-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-blog-post-content-{{ ai_gen_id }} {
    padding: 24px;
  }

  .ai-blog-post-meta-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 12px;
    font-size: 12px;
    color: {{ block.settings.meta_color }};
  }

  .ai-blog-post-date-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .ai-blog-post-author-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .ai-blog-post-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_title_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 12px;
    line-height: 1.3;
  }

  .ai-blog-post-title-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .ai-blog-post-title-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-blog-post-excerpt-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin: 0 0 16px;
  }

  .ai-blog-post-link-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 14px;
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .ai-blog-post-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-blog-post-link-{{ ai_gen_id }} svg {
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }

  .ai-blog-post-link-{{ ai_gen_id }}:hover svg {
    transform: translateX(4px);
  }

  .ai-blog-posts-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.text_color }};
  }

  .ai-blog-posts-empty-{{ ai_gen_id }} p {
    font-size: 16px;
    margin: 0;
  }

  @media screen and (max-width: 989px) {
    .ai-blog-posts-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-blog-posts-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-blog-posts-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.7);
    }

    .ai-blog-post-content-{{ ai_gen_id }} {
      padding: 16px;
    }
  }
{% endstyle %}

<div class="ai-blog-posts-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-blog-posts-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-blog-posts-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-blog-posts-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <p class="ai-blog-posts-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.blog != blank %}
      {% assign blog = block.settings.blog %}
      {% assign posts_to_show = block.settings.posts_count %}
      
      {% if blog.articles_count > 0 %}
        <div class="ai-blog-posts-grid-{{ ai_gen_id }}">
          {% for article in blog.articles limit: posts_to_show %}
            <article class="ai-blog-post-card-{{ ai_gen_id }}">
              <a href="{{ article.url }}" class="ai-blog-post-image-wrapper-{{ ai_gen_id }}">
                {% if article.image %}
                  <img
                    src="{{ article.image | image_url: width: 800 }}"
                    alt="{{ article.image.alt | escape }}"
                    class="ai-blog-post-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="800"
                    height="533"
                  >
                {% else %}
                  <div class="ai-blog-post-image-placeholder-{{ ai_gen_id }}">
                    {{ 'image' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </a>

              <div class="ai-blog-post-content-{{ ai_gen_id }}">
                {% if block.settings.show_date or block.settings.show_author %}
                  <div class="ai-blog-post-meta-{{ ai_gen_id }}">
                    {% if block.settings.show_date %}
                      <div class="ai-blog-post-date-{{ ai_gen_id }}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                          <line x1="16" y1="2" x2="16" y2="6"></line>
                          <line x1="8" y1="2" x2="8" y2="6"></line>
                          <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                        <span>{{ article.published_at | date: '%B %d, %Y' }}</span>
                      </div>
                    {% endif %}
                    {% if block.settings.show_author %}
                      <div class="ai-blog-post-author-{{ ai_gen_id }}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                          <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                        <span>{{ article.author }}</span>
                      </div>
                    {% endif %}
                  </div>
                {% endif %}

                <h3 class="ai-blog-post-title-{{ ai_gen_id }}">
                  <a href="{{ article.url }}">{{ article.title }}</a>
                </h3>

                {% if block.settings.show_excerpt %}
                  <div class="ai-blog-post-excerpt-{{ ai_gen_id }}">
                    {% if article.excerpt != blank %}
                      {{ article.excerpt | strip_html | truncate: 120 }}
                    {% else %}
                      {{ article.content | strip_html | truncate: 120 }}
                    {% endif %}
                  </div>
                {% endif %}

                {% if block.settings.show_read_more %}
                  <a href="{{ article.url }}" class="ai-blog-post-link-{{ ai_gen_id }}">
                    {{ block.settings.read_more_text }}
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <line x1="5" y1="12" x2="19" y2="12"></line>
                      <polyline points="12 5 19 12 12 19"></polyline>
                    </svg>
                  </a>
                {% endif %}
              </div>
            </article>
          {% endfor %}
        </div>
      {% else %}
        <div class="ai-blog-posts-empty-{{ ai_gen_id }}">
          <p>No blog posts found. Start creating content to see it here.</p>
        </div>
      {% endif %}
    {% else %}
      <div class="ai-blog-posts-empty-{{ ai_gen_id }}">
        <p>Select a blog to display posts.</p>
      </div>
    {% endif %}
  </div>
</div>

