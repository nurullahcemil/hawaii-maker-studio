{% comment %}
  Dynamic Event Content Section
  Connects product event_handle metafield to event metaobject and displays content
{% endcomment %}

<!-- SIMPLE TEST - THIS SHOULD ALWAYS APPEAR -->
<div style="position: fixed; top: 0; left: 0; width: 100%; background: #00ff00; color: black; padding: 10px; font-size: 20px; font-weight: bold; z-index: 9999; text-align: center;">
  üü¢ SECTION IS LOADING! Product: {{ product.title }} - ID: {{ product.id }}
</div>

<!-- Get event handle from product metafield -->
{% assign event_handle = product.metafields.custom.event_handle %}

<!-- Load event data from custom metaobject -->
{% if event_handle != blank %}
  {% assign event = shop.metaobjects.event[event_handle] %}
{% endif %}

<!-- DEBUG INFORMATION -->
<div style="position: fixed; top: 0; left: 0; width: 100%; background: #ff0000; color: white; padding: 20px; margin: 0; border: 5px solid #ffff00; font-family: monospace; font-size: 16px; z-index: 9999; box-shadow: 0 0 20px rgba(255,0,0,0.8);">
  <h3 style="color: white; margin-top: 0; font-size: 24px; text-shadow: 2px 2px 4px rgba(0,0,0,0.8);">üö® DEBUG INFORMATION - DYNAMIC EVENT CONTENT üö®</h3>
  
  <p><strong>Product ID:</strong> {{ product.id }}</p>
  <p><strong>Product Title:</strong> {{ product.title }}</p>
  
  <p><strong>Event Handle Metafield:</strong> 
    {% if product.metafields.custom.event_handle != blank %}
      ‚úÖ Found: "{{ product.metafields.custom.event_handle }}"
    {% else %}
      ‚ùå Missing or blank
    {% endif %}
  </p>
  
  <p><strong>Event Handle Value:</strong> 
    {% if product.metafields.custom.event_handle != blank %}
      "{{ product.metafields.custom.event_handle.value }}"
    {% else %}
      No value
    {% endif %}
  </p>
  
  <p><strong>Event Object:</strong>
    {% if event_handle != blank %}
      {% assign event = shop.metaobjects.event[event_handle] %}
      {% if event %}
        ‚úÖ Event found: {{ event.title | default: 'No title' }}
      {% else %}
        ‚ùå No event found with handle: "{{ event_handle }}"
      {% endif %}
    {% else %}
      ‚ùå No event handle to lookup
    {% endif %}
  </p>
  
  {% if event %}
    <p><strong>Event Fields Available:</strong></p>
    <ul style="margin: 10px 0; padding-left: 20px;">
      <li>description: {% if event.description != blank %}‚úÖ "{{ event.description | truncate: 50 }}"{% else %}‚ùå Blank{% endif %}</li>
      <li>skill_level: {% if event.skill_level != blank %}‚úÖ "{{ event.skill_level }}"{% else %}‚ùå Blank{% endif %}</li>
      <li>target_audience: {% if event.audience != blank %}‚úÖ "{{ event.audience }}"{% else %}‚ùå Blank{% endif %}</li>
      <li>duration: {% if event.duration != blank %}‚úÖ "{{ event.duration }}"{% else %}‚ùå Blank{% endif %}</li>
      <li>what_to_expect: {% if event.what_to_expect != blank %}‚úÖ "{{ event.what_to_expect | truncate: 50 }}"{% else %}‚ùå Blank{% endif %}</li>
      <li>inspirational_quote: {% if event.inspirational_quote != blank %}‚úÖ "{{ event.inspirational_quote | truncate: 50 }}"{% else %}‚ùå Blank{% endif %}</li>
      <li>instructor_bio: {% if event.host_bio != blank %}‚úÖ "{{ event.host_bio | truncate: 50 }}"{% else %}‚ùå Blank{% endif %}</li>
    </ul>
  {% endif %}
  
  <p><strong>All Product Metafields:</strong></p>
  <ul style="margin: 10px 0; padding-left: 20px;">
    {% for metafield in product.metafields %}
      <li>{{ metafield.namespace }}.{{ metafield.key }}: {{ metafield.value }}</li>
    {% endfor %}
  </ul>
  
  <p><strong>Available Metaobject Definitions:</strong></p>
  <ul style="margin: 10px 0; padding-left: 20px;">
    {% for metaobject_definition in shop.metaobject_definitions %}
      <li>{{ metaobject_definition.name }} ({{ metaobject_definition.type }})</li>
    {% endfor %}
  </ul>
  
  <p style="background: yellow; color: black; padding: 10px; margin: 10px 0; font-weight: bold;">IF YOU CAN SEE THIS RED BOX, THE SECTION IS WORKING!</p>
</div>
<!-- END DEBUG -->
    
    {%- if event -%}
      
      <!-- Event Description Section -->
      {%- if section.settings.show_description and event.description != blank -%}
        <div class="event-description-section">
          <div class="event-section-header">
            <h2 class="event-section-title">{{ section.settings.description_title | default: 'Description' }}</h2>
          </div>
          <div class="event-description-content">
            {{ event.description }}
          </div>
        </div>
      {%- endif -%}
      
      <!-- Event Details Grid -->
      {%- if section.settings.show_details -%}
        <div class="event-details-grid">
          
          <!-- Skill Level -->
          {%- if event.skill_level != blank -%}
            <div class="event-detail-card">
              <div class="event-detail-icon">üëÅÔ∏è</div>
              <div class="event-detail-content">
                <h3 class="event-detail-title">{{ section.settings.skill_title | default: 'Skill Level' }}</h3>
                <p class="event-detail-value">{{ event.skill_level }}</p>
              </div>
            </div>
          {%- endif -%}
          
          <!-- Target Audience -->
          {%- if event.audience != blank -%}
            <div class="event-detail-card">
              <div class="event-detail-icon">üë§</div>
              <div class="event-detail-content">
                <h3 class="event-detail-title">{{ section.settings.audience_title | default: 'Who is it for?' }}</h3>
                <p class="event-detail-value">{{ event.audience }}</p>
              </div>
            </div>
          {%- endif -%}
          
          <!-- Duration -->
          {%- if event.duration != blank -%}
            <div class="event-detail-card">
              <div class="event-detail-icon">‚ùì</div>
              <div class="event-detail-content">
                <h3 class="event-detail-title">{{ section.settings.duration_title | default: 'Duration' }}</h3>
                <p class="event-detail-value">{{ event.duration }}</p>
              </div>
            </div>
          {%- endif -%}
          
        </div>
      {%- endif -%}
      
      <!-- What to Expect Section -->
      {%- if section.settings.show_expectations and event.what_to_expect != blank -%}
        <div class="event-expectations-section">
          <div class="event-section-header">
            <h2 class="event-section-title">{{ section.settings.expectations_title | default: 'What to Expect' }}</h2>
          </div>
          <div class="event-expectations-content">
            {{ event.what_to_expect }}
          </div>
        </div>
      {%- endif -%}
      
      <!-- Inspirational Quote -->
      {%- if section.settings.show_quote and event.inspirational_quote != blank -%}
        <div class="event-quote-section">
          <div class="event-quote-content">
            <p class="event-quote-text">{{ event.inspirational_quote }}</p>
          </div>
        </div>
      {%- endif -%}
      
      <!-- Host Section -->
      {%- if section.settings.show_host and event.host_bio != blank -%}
        <div class="event-host-section">
          <div class="event-section-header">
            <h2 class="event-section-title">{{ section.settings.host_title | default: 'Host' }}</h2>
          </div>
          <div class="event-host-content">
            {{ event.host_bio }}
          </div>
        </div>
      {%- endif -%}
      
    {%- else -%}
      
      <!-- No Event Data -->
      <div class="no-event-data">
        <div class="no-event-icon">üìÖ</div>
        <h3 class="no-event-title">Event Information Not Available</h3>
        <p class="no-event-message">
          {% if event_handle == blank %}
            Please add an event_handle metafield to this product.
          {% else %}
            No event found with handle: {{ event_handle }}
          {% endif %}
        </p>
      </div>
      
    {%- endif -%}
    
  </div>
</div>

{% stylesheet %}
  .dynamic-event-content {
    padding: var(--spacing-xl) 0;
  }
  
  .event-section-header {
    margin-bottom: var(--spacing-lg);
  }
  
  .event-section-title {
    font-family: var(--font-heading--family, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif);
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0;
    color: var(--color-foreground);
  }
  
  .event-description-content,
  .event-expectations-content,
  .event-host-content {
    font-family: var(--font-body--family, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif);
    line-height: 1.6;
    color: var(--color-foreground);
    font-size: 1.1rem;
  }
  
  .event-details-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-lg);
    margin: var(--spacing-xl) 0;
  }
  
  .event-detail-card {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    padding: var(--spacing-lg);
    background: var(--color-background-secondary, #f8f9fa);
    border-radius: var(--border-radius-lg, 12px);
    border: 1px solid var(--color-border, #e9ecef);
  }
  
  .event-detail-icon {
    font-size: 2rem;
    flex-shrink: 0;
  }
  
  .event-detail-content {
    flex: 1;
  }
  
  .event-detail-title {
    font-family: var(--font-heading--family, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif);
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 var(--spacing-xs) 0;
    color: var(--color-foreground);
  }
  
  .event-detail-value {
    font-family: var(--font-body--family, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif);
    font-size: 1.25rem;
    font-weight: 500;
    margin: 0;
    color: var(--color-foreground);
  }
  
  .event-quote-section {
    text-align: center;
    padding: var(--spacing-xl) 0;
    margin: var(--spacing-xl) 0;
  }
  
  .event-quote-text {
    font-family: var(--font-heading--family, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif);
    font-size: 1.5rem;
    font-weight: 500;
    font-style: italic;
    margin: 0;
    color: var(--color-foreground);
    max-width: 800px;
    margin: 0 auto;
  }
  
  .no-event-data {
    text-align: center;
    padding: var(--spacing-xl);
    background: var(--color-background-secondary, #f8f9fa);
    border-radius: var(--border-radius-lg, 12px);
    border: 1px solid var(--color-border, #e9ecef);
  }
  
  .no-event-icon {
    font-size: 3rem;
    margin-bottom: var(--spacing-md);
  }
  
  .no-event-title {
    font-family: var(--font-heading--family, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif);
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 var(--spacing-sm) 0;
    color: var(--color-foreground);
  }
  
  .no-event-message {
    font-family: var(--font-body--family, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif);
    color: var(--color-foreground);
    margin: 0;
    opacity: 0.8;
  }
  
  @media (max-width: 768px) {
    .event-details-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }
    
    .event-detail-card {
      flex-direction: column;
      text-align: center;
      gap: var(--spacing-sm);
    }
    
    .event-quote-text {
      font-size: 1.25rem;
    }
  }
{% endstylesheet %}

