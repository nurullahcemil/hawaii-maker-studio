{% comment %}
  Dynamic Event Content Section
  Connects product event_handle metafield to event metaobject and displays content
{% endcomment %}

<!-- Get event handle from product metafield -->
{% assign event_handle_raw = product.metafields.custom.event_handle %}

<!-- Normalize event handle to lowercase and replace spaces with hyphens -->
{% if event_handle_raw != blank %}
  {% assign event_handle = event_handle_raw | downcase | replace: ' ', '-' | replace: '_', '-' %}
  
  <!-- Try to find event by matching the event_handle field within metaobjects -->
  {% assign event = null %}
  {% for event_item in shop.metaobjects.event %}
    {% if event_item.event_handle == event_handle %}
      {% assign event = event_item %}
      {% break %}
    {% endif %}
  {% endfor %}
  
  <!-- Fallback: try direct lookup by metaobject handle if no match found -->
  {% unless event %}
    {% assign event = shop.metaobjects.event[event_handle] %}
  {% endunless %}
{% endif %}

<div class="dynamic-event-content section section--{{ section.settings.container_size }} spacing-style color-{{ section.settings.color_scheme }}">
  <div class="section-content-wrapper">
    
    {%- if event -%}
      {%- if section.settings.show_description -%}
        {%- if event.description != blank -%}
          <div class="event-description-section">
            <div class="event-section-header">
              <h2 class="event-section-title">{{ section.settings.description_title | default: 'Description' }}</h2>
            </div>
            <div class="event-description-content">
              {{ event.description }}
            </div>
          </div>
        {%- endif -%}
      {%- endif -%}
      
      <!-- Event Details Grid -->
      {%- if section.settings.show_details -%}
        <div class="event-details-grid">
          
          <!-- Skill Level -->
          {%- if event.skill_level != blank -%}
            <div class="event-detail-card">
              <div class="event-detail-icon">üëÅÔ∏è</div>
              <div class="event-detail-content">
                <h3 class="event-detail-title">{{ section.settings.skill_title | default: 'Skill Level' }}</h3>
                <p class="event-detail-value">{{ event.skill_level }}</p>
              </div>
            </div>
          {%- endif -%}
          
          <!-- Target Audience -->
          {%- if event.audience != blank -%}
            <div class="event-detail-card">
              <div class="event-detail-icon">üë§</div>
              <div class="event-detail-content">
                <h3 class="event-detail-title">{{ section.settings.audience_title | default: 'Who is it for?' }}</h3>
                <p class="event-detail-value">{{ event.audience }}</p>
              </div>
            </div>
          {%- endif -%}
          
          <!-- Duration -->
          {%- if event.duration != blank -%}
            <div class="event-detail-card">
              <div class="event-detail-icon">‚è±Ô∏è</div>
              <div class="event-detail-content">
                <h3 class="event-detail-title">{{ section.settings.duration_title | default: 'Duration' }}</h3>
                <p class="event-detail-value">{{ event.duration }}</p>
              </div>
            </div>
          {%- endif -%}
          
          <!-- Group Size -->
          {%- if event.group_size != blank -%}
            <div class="event-detail-card">
              <div class="event-detail-icon">üë•</div>
              <div class="event-detail-content">
                <h3 class="event-detail-title">{{ section.settings.group_size_title | default: 'Group Size' }}</h3>
                <p class="event-detail-value">{{ event.group_size }}</p>
              </div>
            </div>
          {%- endif -%}
          
          <!-- Location -->
          {%- if event.location != blank -%}
            <div class="event-detail-card">
              <div class="event-detail-icon">üìç</div>
              <div class="event-detail-content">
                <h3 class="event-detail-title">{{ section.settings.location_title | default: 'Location' }}</h3>
                <p class="event-detail-value">{{ event.location }}</p>
              </div>
            </div>
          {%- endif -%}
          
        </div>
      {%- endif -%}
      
      <!-- What to Expect Section -->
      {%- if section.settings.show_expectations -%}
        {%- if event.what_to_expect != blank -%}
          <div class="event-expectations-section">
            <div class="event-section-header">
              <h2 class="event-section-title">{{ section.settings.expectations_title | default: 'What to Expect' }}</h2>
            </div>
            <div class="event-expectations-content">
              {{ event.what_to_expect }}
            </div>
          </div>
        {%- endif -%}
      {%- endif -%}
      
      <!-- Host Section -->
      {%- if section.settings.show_host -%}
        {%- if event.host_name != blank or event.host_bio != blank -%}
          <div class="event-host-section">
            <div class="event-section-header">
              <h2 class="event-section-title">{{ section.settings.host_title | default: 'Meet Your Host' }}</h2>
            </div>
            <div class="event-host-content">
              {%- if event.host_name != blank -%}
                <h3 class="event-host-name">{{ event.host_name }}</h3>
              {%- endif -%}
              {%- if event.host_bio != blank -%}
                <div class="event-host-bio">{{ event.host_bio }}</div>
              {%- endif -%}
            </div>
          </div>
        {%- endif -%}
      {%- endif -%}
      
    {%- else -%}
      
      <!-- No Event Data -->
      <div class="no-event-data">
        <div class="no-event-icon">üìÖ</div>
        <h3 class="no-event-title">Event Information Not Available</h3>
        <p class="no-event-message">
          {% if event_handle_raw == blank %}
            Please add an event_handle metafield to this product.
          {% else %}
            No event found with handle: <strong>{{ event_handle }}</strong><br>
            Original input: <em>{{ event_handle_raw }}</em><br>
            <small>Make sure the metaobject handle exactly matches: {{ event_handle }}</small>
          {% endif %}
        </p>
      </div>
      
    {%- endif -%}
    
  </div>
</div>

{% stylesheet %}
  .dynamic-event-content {
    padding: var(--spacing-xl) 0;
  }
  
  .event-section-header {
    margin-bottom: var(--spacing-lg);
  }
  
  .event-section-title {
    font-family: var(--font-heading--family, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif);
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0;
    color: var(--color-foreground);
  }
  
  .event-description-content,
  .event-expectations-content,
  .event-host-content {
    font-family: var(--font-body--family, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif);
    line-height: 1.6;
    color: var(--color-foreground);
    font-size: 1.1rem;
  }
  
  .event-details-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-lg);
    margin: var(--spacing-xl) 0;
  }
  
  .event-detail-card {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    padding: var(--spacing-lg);
    background: var(--color-background-secondary, #f8f9fa);
    border-radius: var(--border-radius-lg, 12px);
    border: 1px solid var(--color-border, #e9ecef);
  }
  
  .event-detail-icon {
    font-size: 2rem;
    flex-shrink: 0;
  }
  
  .event-detail-content {
    flex: 1;
  }
  
  .event-detail-title {
    font-family: var(--font-heading--family, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif);
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 var(--spacing-xs) 0;
    color: var(--color-foreground);
  }
  
  .event-detail-value {
    font-family: var(--font-body--family, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif);
    font-size: 1.25rem;
    font-weight: 500;
    margin: 0;
    color: var(--color-foreground);
  }
  
  .event-quote-section {
    text-align: center;
    padding: var(--spacing-xl) 0;
    margin: var(--spacing-xl) 0;
  }
  
  .event-quote-text {
    font-family: var(--font-heading--family, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif);
    font-size: 1.5rem;
    font-weight: 500;
    font-style: italic;
    margin: 0;
    color: var(--color-foreground);
    max-width: 800px;
    margin: 0 auto;
  }
  
  .no-event-data {
    text-align: center;
    padding: var(--spacing-xl);
    background: var(--color-background-secondary, #f8f9fa);
    border-radius: var(--border-radius-lg, 12px);
    border: 1px solid var(--color-border, #e9ecef);
  }
  
  .no-event-icon {
    font-size: 3rem;
    margin-bottom: var(--spacing-md);
  }
  
  .no-event-title {
    font-family: var(--font-heading--family, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif);
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 var(--spacing-sm) 0;
    color: var(--color-foreground);
  }
  
  .no-event-message {
    font-family: var(--font-body--family, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif);
    color: var(--color-foreground);
    margin: 0;
    opacity: 0.8;
  }
  
  @media (max-width: 768px) {
    .event-details-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }
    
    .event-detail-card {
      flex-direction: column;
      text-align: center;
      gap: var(--spacing-sm);
    }
    
    .event-quote-text {
      font-size: 1.25rem;
    }
  }
{% endstylesheet %}

