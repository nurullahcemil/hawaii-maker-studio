{% comment %}
  Dynamic Booking Form Section
  Uses theme template sections and snippets for consistent design
{% endcomment %}

{%- liquid
  assign selected_variant = product.selected_or_first_available_variant
  assign available = selected_variant.available
  assign product_form_id = 'product-form-' | append: product.id | append: '-' | append: section.id
  assign add_to_cart_label = 'product.store_front.add_to_cart' | t
  assign sold_out_label = 'product.store_front.sold_out' | t
-%}

<!-- Get event handle from product metafield or section settings -->
{% assign event_handle = product.metafields.custom.event_handle | default: section.settings.event_handle %}

<!-- Load event data from metaobject -->
{% if event_handle != blank %}
  {% assign event = shop.metaobjects.event[event_handle] %}
{% endif %}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div class="dynamic-booking-form section section--{{ section.settings.container_size }} spacing-style color-{{ section.settings.color_scheme }}">
  <div class="section-content-wrapper">
    
    <!-- Event Location Badge -->
    {%- if event and event.location.value != blank -%}
            {%- liquid
        assign event_location_val = event.location.value | downcase
              assign bg_color = '#4caf50'
        assign location_icon = 'üìç'
        
        if event_location_val contains 'virtual'
                assign bg_color = '#4caf50'
          assign location_icon = 'üíª'
        elsif event_location_val contains 'new york' or event_location_val contains 'nyc'
                assign bg_color = '#f44336'
          assign location_icon = 'üóΩ'
        elsif event_location_val contains 'honolulu'
                assign bg_color = 'linear-gradient(45deg, #FF6B35, #F7931E, #FFD23F, #06FFA5, #00D4FF)'
          assign location_icon = 'üå∫'
        elsif event_location_val contains 'san francisco'
                assign bg_color = '#FFA500'
          assign location_icon = 'üåâ'
        elsif event_location_val contains 'irvine'
          assign bg_color = '#2196F3'
          assign location_icon = 'üèñÔ∏è'
              endif
            -%}
      <div class="event-location-badge">
        <div class="event-type" data-bg-color="{{ bg_color }}" style="background: {{ bg_color }};">
          <span style="margin-right: 6px;">{{ location_icon }}</span>
          <span>{{ event.location.value }}</span>
              </div>
            </div>
          {%- endif -%}
          
    <!-- Product Information Grid -->
    <div class="product-information__grid product-information--media-left">
      
      <!-- Product Details -->
      <div class="product-details">
        
        <!-- Product Title -->
        <h1 class="product-title">
          {{ product.title }}
        </h1>
        
        <!-- Price -->
        {% render 'price', product: product %}
        
        <!-- Event Description -->
        {%- if event and event.description.value != blank -%}
          <div class="event-description">
            <h3 class="event-description-title">About This Event</h3>
            <div class="event-description-content">
              {{ event.description.value }}
              </div>
              </div>
        {%- endif -%}
        
        <!-- Event Details -->
        {%- if event -%}
          <div class="event-details">
            {%- if event.duration.value != blank -%}
              <div class="event-detail-item">
                <span class="event-detail-icon">‚è±Ô∏è</span>
                <span class="event-detail-label">Duration:</span>
                <span class="event-detail-value">{{ event.duration.value }}</span>
          </div>
                    {%- endif -%}
                    
            {%- if event.location.value != blank -%}
              <div class="event-detail-item">
                <span class="event-detail-icon">üìç</span>
                <span class="event-detail-label">Location:</span>
                <span class="event-detail-value">{{ event.location.value }}</span>
              </div>
                    {%- endif -%}
          </div>
                {%- endif -%}

        <!-- Product Form -->
        <product-form class="product-form" data-section-id="{{ section.id }}">
          <div class="product-form__error-message-wrapper" role="alert" hidden>
            <span class="product-form__error-message"></span>
                </div>
          
          {%- form 'product', product, id: product_form_id, class: 'form', novalidate: 'novalidate', data-type: 'add-to-cart-form' -%}
            
            <!-- Variant Picker -->
            {% unless product.has_only_default_variant %}
              {% render 'variant-main-picker', product_resource: product %}
                      {% endunless %}
            
            <!-- Quantity Selector -->
              <div class="quantity-selector">
              <label for="Quantity-{{ section.id }}" class="quantity-label">
                {{ 'products.product.quantity.label' | t }}
              </label>
              {% render 'quantity-selector', product: product, section: section %}
                </div>
            
            <!-- Add to Cart Button -->
            <div class="product-form__buttons">
            <button
              type="submit"
              name="add"
                class="product-form__cart-submit button button--primary button--full-width"
                {% if product.selected_or_first_available_variant.available == false %}disabled{% endif %}
              >
                <span>
                  {%- if product.selected_or_first_available_variant.available -%}
                    {{ 'products.product.add_to_cart' | t }}
        {%- else -%}
                    {{ 'products.product.sold_out' | t }}
        {%- endif -%}
          </span>
                <div class="loading-overlay__spinner hidden">
                  <svg aria-hidden="true" focusable="false" class="spinner" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
                    <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                  </svg>
                </div>
                </button>
                  </div>
              
          {%- endform -%}
        </product-form>
        
        <!-- Product Description -->
        {%- if product.description != blank -%}
          <div class="product-description">
            <h3 class="product-description-title">Product Details</h3>
            <div class="product-description-content">
              {{ product.description }}
              </div>
              </div>
        {%- endif -%}
        
            </div>
            
      <!-- Product Media -->
      <div class="product-media">
        {% render 'product-media', product: product %}
            </div>
            
            </div>
            
          </div>
        </div>

{% stylesheet %}
  .dynamic-booking-form {
    padding: var(--spacing-lg) 0;
  }
  
  .event-location-badge {
    text-align: center;
    margin-bottom: var(--spacing-lg);
  }
  
  .event-type {
    display: inline-flex;
    align-items: center;
    color: white;
    font-family: var(--font-body--family, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif);
    font-size: 0.875em;
    font-weight: 600;
    padding: 8px 16px;
    border-radius: 25px;
    text-transform: uppercase;
    white-space: nowrap;
    height: fit-content;
    line-height: 1;
    gap: 6px;
    letter-spacing: 0.05em;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }
  
  .product-title {
    font-family: var(--font-heading--family, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif);
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 var(--spacing-md) 0;
    color: var(--color-foreground);
    line-height: 1.2;
    letter-spacing: -0.02em;
  }
  
  .event-description {
    margin: var(--spacing-lg) 0;
    padding: var(--spacing-md);
    background: var(--color-background-secondary, #f8f9fa);
    border-radius: var(--border-radius-md, 8px);
  }
  
  .event-description-title {
    font-family: var(--font-heading--family, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif);
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 var(--spacing-sm) 0;
    color: var(--color-foreground);
  }
  
  .event-description-content {
    font-family: var(--font-body--family, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif);
    line-height: 1.6;
    color: var(--color-foreground);
  }
  
  .event-details {
    margin: var(--spacing-lg) 0;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }
  
  .event-detail-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    font-family: var(--font-body--family, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif);
  }
  
  .event-detail-icon {
    font-size: 1.1em;
  }
  
  .event-detail-label {
    font-weight: 600;
    color: var(--color-foreground);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 0.9rem;
  }
  
  .event-detail-value {
    color: var(--color-foreground);
    font-weight: 500;
  }
  
  .product-information__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-xl);
    align-items: start;
  }
  
  .product-details {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }
  
  .product-media {
    position: sticky;
    top: var(--spacing-lg);
  }
  
  .quantity-selector {
    margin: var(--spacing-md) 0;
  }
  
  .quantity-label {
    display: block;
    font-family: var(--font-body--family, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif);
    font-size: 14px;
    font-weight: 600;
    color: var(--color-foreground);
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .product-form__buttons {
    margin-top: var(--spacing-md);
  }
  
  .product-description {
    margin-top: var(--spacing-lg);
    padding: var(--spacing-md);
    background: var(--color-background-secondary, #f8f9fa);
    border-radius: var(--border-radius-md, 8px);
  }
  
  .product-description-title {
    font-family: var(--font-heading--family, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif);
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 var(--spacing-sm) 0;
    color: var(--color-foreground);
  }
  
  .product-description-content {
    font-family: var(--font-body--family, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif);
    line-height: 1.6;
    color: var(--color-foreground);
  }
  
  @media (max-width: 768px) {
    .product-information__grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }
    
    .product-media {
      position: static;
    }
    
    .event-details {
      flex-direction: column;
      align-items: flex-start;
    }
    
    .product-title {
      font-size: 2rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Dynamic Booking Form",
  "tag": "section",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "header",
      "content": "Event Settings"
    },
    {
      "type": "text",
      "id": "event_handle",
      "label": "Event Handle",
      "info": "Leave blank to use product metafield"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "container_size",
      "label": "Container Size",
      "options": [
        {
          "value": "full-width",
          "label": "Full Width"
        },
        {
          "value": "page-width",
          "label": "Page Width"
        },
        {
          "value": "large",
          "label": "Large"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "small",
          "label": "Small"
        }
      ],
      "default": "medium"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color Scheme",
      "options": [
        {
          "value": "default",
          "label": "Default"
        },
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "background-1",
          "label": "Background 1"
        },
        {
          "value": "background-2",
          "label": "Background 2"
        }
      ],
      "default": "default"
    }
  ],
  "presets": [
    {
      "name": "Dynamic Booking Form"
    }
  ]
}
{% endschema %} 