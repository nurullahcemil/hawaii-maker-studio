              }
            },
            "group": {
              "type": "group",
              "settings": {
                "gap": 4
              },
              "blocks": {
                "heading": {
                  "type": "text",
                  "settings": {
                    "text": "<h2>Group Size</h2>",
                    "type_preset": "h3",
