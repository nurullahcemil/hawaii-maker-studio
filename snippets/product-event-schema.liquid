{% comment %}
  Product Event Schema - Enhanced structured data for event products
{% endcomment %}

{%- liquid
  assign event_handle = product.metafields.custom.event_handle
  if event_handle != blank
    assign event = shop.metaobjects.event[event_handle]
  endif
-%}

{% if event %}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Event",
    "name": "{{ product.title | escape }}",
    "description": "{{ event.description | strip_html | escape }}",
    "url": "{{ shop.url }}{{ product.url }}",
    "image": [
      {% for media in product.media limit: 5 %}
        "{{ media | image_url: width: 1200 }}"{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ],
    "eventStatus": "https://schema.org/EventScheduled",
    "eventAttendanceMode": "{% if event.location.value contains 'Virtual' %}https://schema.org/OnlineEventAttendanceMode{% else %}https://schema.org/OfflineEventAttendanceMode{% endif %}",
    "location": {% if event.location.value contains 'Virtual' %}
      {
        "@type": "VirtualLocation",
        "url": "{{ shop.url }}{{ product.url }}"
      }
    {% else %}
      {
        "@type": "Place",
        "name": "{{ event.location.value }}",
        "address": "{{ event.location.value }}"
      }
    {% endif %},
    "organizer": {
      "@type": "Organization",
      "name": "{{ shop.name }}",
      "url": "{{ shop.url }}"
    },
    "offers": {
      "@type": "Offer",
      "url": "{{ shop.url }}{{ product.url }}",
      "price": "{{ product.price | money_without_currency }}",
      "priceCurrency": "{{ cart.currency.iso_code }}",
      "availability": "{% if product.available %}https://schema.org/InStock{% else %}https://schema.org/OutOfStock{% endif %}",
      "validFrom": "{{ 'now' | date: '%Y-%m-%d' }}"
    }{% if event.host_name.value != blank %},
    "performer": {
      "@type": "Person",
      "name": "{{ event.host_name.value }}"
    }{% endif %}{% if event.duration.value != blank %},
    "duration": "PT{{ event.duration.value }}M"{% endif %}
  }
  </script>
{% endif %}
