{% comment %}
  Hawaii Event Icons - Location-specific icons for events
  Usage: {% render 'hawaii-event-icons', event_type: 'honolulu' %}
{% endcomment %}

{% assign event_type = event_type | default: 'default' %}

{% case event_type %}
  {% when 'honolulu' %}
    <svg class="hawaii-event-icon hawaii-event-icon--honolulu" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M12 2L13.09 8.26L20 9L13.09 9.74L12 16L10.91 9.74L4 9L10.91 8.26L12 2Z" fill="currentColor"/>
      <path d="M12 2C12 2 15 6 15 12C15 18 12 22 12 22C12 22 9 18 9 12C9 6 12 2 12 2Z" fill="none" stroke="currentColor" stroke-width="1.5"/>
    </svg>
  {% when 'new-york' %}
    <svg class="hawaii-event-icon hawaii-event-icon--new-york" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M12 2L14 8H20L15 12L17 18L12 15L7 18L9 12L4 8H10L12 2Z" fill="currentColor"/>
      <rect x="10" y="4" width="4" height="16" fill="currentColor" opacity="0.3"/>
    </svg>
  {% when 'virtual' %}
    <svg class="hawaii-event-icon hawaii-event-icon--virtual" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <circle cx="12" cy="12" r="10" fill="none" stroke="currentColor" stroke-width="2"/>
      <path d="M8 12L10.5 14.5L16 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      <circle cx="12" cy="12" r="3" fill="currentColor"/>
    </svg>
  {% when 'san-francisco' %}
    <svg class="hawaii-event-icon hawaii-event-icon--san-francisco" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M12 2L13.5 6H18L15 9L16.5 13L12 10L7.5 13L9 9L6 6H10.5L12 2Z" fill="currentColor"/>
      <path d="M12 2C12 2 8 6 8 12C8 18 12 22 12 22C12 22 16 18 16 12C16 6 12 2 12 2Z" fill="none" stroke="currentColor" stroke-width="1.5"/>
    </svg>
  {% else %}
    <svg class="hawaii-event-icon hawaii-event-icon--default" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <circle cx="12" cy="12" r="10" fill="none" stroke="currentColor" stroke-width="2"/>
      <path d="M12 6V12L16 14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
{% endcase %}

<style>
  .hawaii-event-icon {
    display: inline-block;
    vertical-align: middle;
    margin-right: 8px;
  }
  
  .hawaii-event-icon--honolulu {
    color: #FF6B35;
  }
  
  .hawaii-event-icon--new-york {
    color: #2E86AB;
  }
  
  .hawaii-event-icon--virtual {
    color: #A23B72;
  }
  
  .hawaii-event-icon--san-francisco {
    color: #F18F01;
  }
  
  .hawaii-event-icon--default {
    color: var(--color-foreground);
  }
</style>